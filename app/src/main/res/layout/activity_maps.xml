<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MapsActivity">

    <RelativeLayout
        android:id="@+id/maps_toolbar"
        style=""
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/btnback"
            style=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:drawableStart="@drawable/menu_arrow"

            android:text="RSR Pechhulp" />
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/maps_toolbar"
        map:uiZoomControls="false"
        map:uiCompass="false"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="@layout/activity_maps"
        />

    <RelativeLayout
        android:id="@+id/rl_maps_call_popup_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/maps_toolbar"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/rl_maps_call_popup"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/txv_maps_cost_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Belkosten"
                style=""/>
            <Button
                android:id="@+id/btn_maps_dial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/main_btn_phone"
                android:layout_alignParentBottom="true"
                android:text="Bel nu"

                style=""/>
            <TextView
                android:id="@+id/txv_maps_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_maps_dial"
                android:layout_below="@id/txv_maps_cost_title"
                android:gravity="center"
                android:text=""
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_maps_popup_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_maps_call_popup"
            android:layout_alignStart="@id/rl_maps_call_popup"
            android:text="Annuleren"

            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_maps_call_now"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/main_btn_tel"
        android:text="Bel RSR nu"

        />

    <ImageView
        android:id="@+id/imv_maps_location_obtaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="237dp"
        android:src="@drawable/clock_mini" />
</RelativeLayout>
