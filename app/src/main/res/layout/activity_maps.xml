<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_maps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MapsActivity">

    <RelativeLayout
        android:id="@+id/headerflipper_maps"
        style="@style/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0097A7">

        <Button
            android:id="@+id/btnback"

            android:layout_width="105dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"


            android:layout_marginTop="0dp"
            android:background="#0097A7 "
            android:drawableStart="@drawable/menu_arrow"
            android:text="RSR Pechhulp"
            android:textColor="#c3d043" />
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerflipper_maps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-8dp"
        map:uiCompass="false"
        map:uiZoomControls="false"
        tools:context="@layout/activity_maps" />

    <RelativeLayout
        android:id="@+id/call_popop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerflipper_maps"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/callpopup_content"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="#c3d043"
            android:padding="5dp">

            <TextView
                android:id="@+id/titletext"
                style=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Belkosten"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_maps_dial"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableStart="@drawable/main_btn_phone"

                android:background="@drawable/button_background"
                android:textColor="@android:color/white"


                android:onClick="DialClick"
                android:text="Bel nu" />

            <TextView
                android:id="@+id/undertext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_maps_dial"
                android:layout_below="@id/titletext"
                android:gravity="center"
                android:text="Voor dit nummer betaalt u uw gebruikelijke belkosten"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/callpopup_content"
            android:layout_alignStart="@id/callpopup_content"
            android:onClick="btnPopupCloseClick"
            android:text="Annuleren"
            android:background="#0097A7"
            android:textColor="@android:color/white"

            />
    </RelativeLayout>

    <Button
        android:id="@+id/callbtn"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/main_btn_tel"
        android:onClick="btnCallNowClick"

        android:text="Bel RSR nu" />

    <ImageView
        android:id="@+id/location_obtaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:src="@drawable/clock_mini" />
</RelativeLayout>
