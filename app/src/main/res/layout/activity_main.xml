<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/topToolbar"
        style="@style/TopToolbar">

        <TextView
            android:text="RSR Revalidatieservice"
            style="@style/ToolbarTitleText" />

        <ImageView
            android:id="@+id/infobtn"
            android:src="@drawable/main_i"
            android:contentDescription="@string/undertext"
            style="@style/ToolbarRightIcon" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:src="@drawable/main_bg"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topToolbar" />

    <Button
        android:id="@+id/rsrbtn"
        android:background="@drawable/main_btn_bg"
        android:layout_marginBottom="12dp"
        android:text="@string/rsrBtn"
        android:drawableStart="@drawable/main_btn_warning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/BottomButton" />

</android.support.constraint.ConstraintLayout>